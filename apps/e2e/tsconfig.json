{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "tests",
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "vitest/importMeta"
    ]
  },
  "include": ["tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
