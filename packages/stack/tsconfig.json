{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["next-env.d.ts", "src/**/*", ".next/types/**/*.ts", "../stack-shared/src/utils/browsers.tsx"],
  "exclude": ["node_modules", "dist"]
}
