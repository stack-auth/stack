{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "target": "ES2021",
    "lib": ["DOM", "DOM.Iterable", "ES2021", "ES2022.Error"],
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
